user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
	worker_connections 1024;
}

http {
	##
	# Basic Settings
	##

	sendfile on;
	tcp_nopush on;
	types_hash_max_size 2048;
	# server_tokens off;

	# server_names_hash_bucket_size 64;
	# server_name_in_redirect off;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	##
	# SSL Settings
	##

	ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3; # Dropping SSLv3, ref: POODLE
	ssl_prefer_server_ciphers on;

	##
	# Logging Settings
	##

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	##
	# Gzip Settings
	##

	gzip on;

	# gzip_vary on;
	# gzip_proxied any;
	# gzip_comp_level 6;
	# gzip_buffers 16 8k;
	# gzip_http_version 1.1;
	# gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

	##
	# Virtual Host Configs
	##

  proxy_cache_path  /var/nginx/cache   keys_zone=cache:10m inactive=24h  max_size=1g;
 	
	include /etc/nginx/conf.d/*.conf;
	include /etc/nginx/sites-enabled/*;

	server {
 	  listen 80; 
    listen [::]:80; 

    server_name {{ hostvars.web_proxy_node.ansible_host }};

    location / {
      proxy_pass             http://{{ hostvars.web_server_node.ansible_host }}:80;
      proxy_cache_bypass     $arg_should_bypass_cache;
      proxy_cache            cache;
      proxy_cache_key        $scheme://$host$uri$is_args$query_string;
      proxy_cache_valid      200 30m;      proxy_cache_lock on;
    }
  }
} 